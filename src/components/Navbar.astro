<style>
  .logo-shadow {
    filter: drop-shadow(rgba(0, 0, 0, 0.5) 4px 3px 1px);
  }
</style>

<script>
  const nav = document.querySelector("nav");

  window.addEventListener("scroll", () => {
    if (!nav) return;

    let scrollPos = window.scrollY;
    if (scrollPos > 5) {
      nav.classList.add("shadow");
    } else {
      nav.classList.remove("shadow");
    }
  });
</script>
